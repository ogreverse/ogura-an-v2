{
  "private": true,
  "name": "ogura-an-v2",
  "description": "OpenAIとNotionのElectronアプリ",
  "version": "1.0.0",
  "author": "Ogreverse",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "asar:extract": "rm -rf output 2> /dev/null && mkdir -p output && npx asar extract dist/mac/ogura-an-v2.app/Contents/Resources/app.asar ./output",
    "asar:extract //": "build で生成した asar ファイルを解凍",
    "postinstall": "electron-builder install-app-deps",
    "make:app:mac": "electron-builder --mac --arm64",
    "make:app:mac //": "Mac(Apple Silicon)用インストーラー生成",
    "eslint:inspect": "npx eslint --inspect-config",
    "eslint:inspect //": "ESLintの設定を確認",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "build": {
    "files": [
      ".env",
      "app/**/*",
      "renderer/**/*"
    ]
  },
  "dependencies": {
    "axios": "^1.7.7",
    "electron-log": "^5.2.2",
    "electron-serve": "^1.3.0",
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.52",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "autoprefixer": "^10.4.19",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9.15.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "next": "^14.2.4",
    "nextron": "^9.4.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.6.3"
  }
}
